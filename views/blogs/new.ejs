<% include ../partials/header %>
<div class="add-header-margin-100"></div>
<div class="container new-memory">
	<div class="text-center">
		<h1>Create a New Memory</h1>
		<form action="/blogs/new" method="POST">
			<div class="form-group">
				<label for="title">Title</label>
				<input class="form-control" id="title" type="text" name="blog[title]" placeholder="Memory Title" required>
			</div>
			<div class="form-group">
				<label for="image">Image</label>
				<input class="form-control" id="image" type="text" name="blog[image]" placeholder="Memory Image"required>
			</div>
			<div class="form-group">
				<label for="description">Description</label>
				<textarea class="form-control" id="description" type="textarea" name="blog[description]" placeholder="Memory Details" required></textarea>
			</div>
			
			
			<button class="btn btn-primary">Submit</button>
		</form>		
	</div>	
</div>


<% include ../partials/footer %>